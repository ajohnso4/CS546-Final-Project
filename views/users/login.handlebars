<div class="container">
    <h1 class="Login">Login</h1>
    <form method="POST" action="/users/login" id="login-form">
        <label  for="Email">Email</label>
        <input class="form-control" type="text" id="Email" name="Email" placeholder="Email" required/> 
        <label  for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" placeholder="Password" required/>
        <button type="submit" name="submitButton" id="submitButton" class="btn">Login</button>
        {{#each errors}}
            <div class = "error" id="errors">{{this}}</div>
        {{/each}}
    </form>
</div>